# git
alias gd="git diff --color"
alias gdf="git diff --color --cached"
alias gp="git pull"
alias gco="git checkout"
alias gs="git status"
alias gcm="git commit -m"

# Use exa instead of ls if installed
if hash exa 2>/dev/null; then
    alias la='exa -hal'
else
    alias la='ls -lsah'
fi
alias grep='grep --color'
