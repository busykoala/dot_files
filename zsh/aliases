# git
alias gd="git diff --color"
alias gdf="git diff --color --cached"
alias gp="git pull"
alias gco="git checkout"
alias gs="git status"
alias gcm="git commit -m"

# Use exa instead of ls if installed
if hash exa 2>/dev/null; then
    alias la='exa -hal'
else
    alias la='ls -lsah'
fi
alias grep='grep --color'

alias display-HDMI1-on="xrandr --output HDMI1 --auto --left-of eDP1"
alias display-HDMI1-off="xrandr --output HDMI1 --off"

alias unmute="pactl set-sink-mute 0 false"
alias toctrl="setxkbmap -option 'caps:ctrl_modifier'"

alias em="emacs -nw"
